{# templates/security/login.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <section class="volunteer-section section-padding" id="section_4">
        <div class="container">
            <div class="row">

                <div class="col-lg-6 col-12">
                    <h2 class="text-white mb-4">Se connecter</h2>

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form class="custom-form volunteer-form mb-5 mb-lg-0" action="{{ path('login') }}" method="post" role="form">
                        <h3 class="mb-4">Connexion</h3>

                        <div class="row">
                            <div class="col-lg-12 col-12 mb-3">
                                <input type="text" name="_username" id="email" class="form-control"
                                       placeholder="Adresse e-mail" value="{{ last_email }}" required>
                            </div>

                            <div class="col-lg-12 col-12 mb-3">
                                <input type="password" name="_password" id="password" class="form-control"
                                       placeholder="Mot de passe" required>
                            </div>
                        </div>

                        <button type="submit" class="form-control">Se connecter</button>
                    </form>

                    <p class="text-white mt-4">Vous n'avez pas de compte ?
                        <a href="{{ path('register_benevole') }}" class="text-white">
                            Inscrivez-vous ici
                        </a>
                    </p>
                </div>

                <div class="col-lg-6 col-12">
                    <img src="{{ asset('assets/images/smiling-casual-woman-dressed-volunteer-t-shirt-with-badge.jpg') }}"
                         class="volunteer-image img-fluid" alt="">

                    <div class="custom-block-body text-center">
                        <h4 class="text-white mt-lg-3 mb-lg-3">Pourquoi créer un compte ?</h4>

                        <p class="text-white">
                            Connectez-vous pour accéder à toutes les fonctionnalités de notre plateforme,
                            y compris la gestion de vos activités bénévoles et bien plus encore.
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}
